<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2c3039"
    tools:context=".RateNw2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Rate Our App"
        android:layout_marginLeft="30dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:text="If you like this app, please take a few seconds to rate us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginEnd="30dp"
        android:id="@+id/textView2"
        android:textSize="18dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="50dp">

        <ImageView
            android:id ="@+id/rating1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_white"
            android:layout_marginEnd="15dp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rating2"
            android:src="@drawable/ic_star_white"
            android:layout_toEndOf="@+id/rating1"
            android:layout_marginEnd="15dp"
            android:visibility="visible"/>
        <ImageView
            android:id ="@+id/rating3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_white"
            android:layout_toEndOf="@+id/rating2"
            android:layout_marginEnd="15dp"
            android:visibility="visible" />
        <ImageView
            android:id ="@+id/rating4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_white"
            android:layout_toEndOf="@+id/rating3"
            android:layout_marginEnd="15dp"
            android:visibility="visible" />
        <ImageView
            android:id ="@+id/rating5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_star_white"
            android:layout_toEndOf="@+id/rating4"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:visibility="visible" />
        <View
            android:id="@+id/view9"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/rating5"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/rating1"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            />

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/view9"
            android:layout_alignEnd="@+id/view9"
            android:visibility="gone"
            android:textColor="#ffffff"
            android:id="@+id/button10"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </RelativeLayout>
</LinearLayout>
